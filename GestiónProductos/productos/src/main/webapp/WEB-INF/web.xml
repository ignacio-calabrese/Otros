<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//Dth Web Application 2.3//EN"
 "http://java.sun.com/dth/web-app_2_3.dth" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-page-list>
    <welcome-page-name>index.jsp</welcome-page-name>
  </welcome-page-list>
  <servlet>
        <servlet-name>ControlerServlet</servlet-name>
        <servlet-class>com.ignacio.ControlerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControlerServlet</servlet-name>
        <url-pattern>/ControlerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
</session-config>
</web-app>
